#!/bin/bash

echo -e "\n"

if [ -e src/index.md.html ]
then
  echo -e "removing src/index.md.html\n"
  rm src/index.md.html
fi

for document in $(find src ! -name 'src/index.md' -iname \*.md); do
  echo "generating markup for $document"

  `cat $document | node columnize.js | pandoc --from=markdown --to=html > $(echo $document | sed 's/.md/.md.html/')`
done

echo -e "done.\n\n"
