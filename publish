#!/bin/bash

if [ -e src/index.md ]
then
  echo "removing src/index.md"
  rm src/index.md
  rm src/index.md.html
fi

for document in $(find src ! -name 'src/index.md' -iname \*.md); do
  echo "generating markup for $document"

  `pandoc --from=markdown --to=html $document > $(echo $document | sed 's/.md/.md.html/')`

  while IFS= read -r line; do
    if [[ $line =~ ^#[[:space:]](.+) ]]; then
      echo "adding $document to table of contents"
      echo -e "[${BASH_REMATCH[1]}](`echo $document | sed 's/src\///' `) \n" >> src/index.md
    fi
  done < $document
done

echo "generating markup for index"
`pandoc --from=markdown --to=html 'src/index.md' --output='src/index.md.html'`

echo "done."
