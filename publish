#!/bin/bash

echo -e "\n"

for document in $(find src ! -name 'index.md' -iname \*.md); do
  echo "generating markup for $document"

  `babel-node ejs-cli.js $document > $(echo $document | sed 's/.md/.md.html/' | sed 's/src\///')`
done

echo "generating markup for src/index.md"
`babel-node ejs-cli.js src/index.md src/header.html | sed 's/\.md/\.md\.html/'  > index.html`

echo -e "\ndone.\n\n"
